generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  email String
  link  String

  @@unique([email])
}

model Events {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  date        String
  location    String
  guests      Int
  status      EventStatus
  type        String
  image       String[]
  description String
}

enum EventStatus {
  UPCOMING
  ONGOING
  COMPLETED
  CANCELLED
}
